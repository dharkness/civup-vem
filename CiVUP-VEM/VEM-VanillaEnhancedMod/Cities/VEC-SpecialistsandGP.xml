			<Where SpecialistType="SPECIALIST_ENGINEER" YieldType="YIELD_PRODUCTION" />
			<Set Yield="3" />
		</Update>
		<Update>
			<Where SpecialistType="SPECIALIST_MERCHANT" YieldType="YIELD_GOLD" />
			<Set Yield="3" />
		</Update>
		<Update>
			<Where SpecialistType="SPECIALIST_SCIENTIST" YieldType="YIELD_SCIENCE" />
			<Set Yield="3" />
		</Update>
	</SpecialistYields>
	<Specialists>
