				 BaseGold="100"
				 NumGoldPerEra="600"
				 />
			<!-- 350, 50 -->
		</Update>
		<Update>
			<Where Type="UNIT_SCIENTIST" />
			<Set GoldenAgeTurns="6" />
		</Update>
		<Update>
			<Where Type="UNIT_GREAT_GENERAL" />
			<Set GoldenAgeTurns="6" />
		</Update>
	</Units>
	<SpecialistYields>
